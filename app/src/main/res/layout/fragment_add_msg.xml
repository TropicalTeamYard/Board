<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".AddMsgFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_msg_content"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:hint="在这里输入留言"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_msg_add_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:background="@drawable/border"
                android:contentDescription="icon"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_grey"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/add_msg_img_bar"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/add_msg_img0"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_grey" />

                <ImageView
                    android:id="@+id/add_msg_img1"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_grey"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/add_msg_img2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_grey"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/add_msg_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:text="提交留言"
            android:textSize="20sp" />
    </LinearLayout>


</FrameLayout>